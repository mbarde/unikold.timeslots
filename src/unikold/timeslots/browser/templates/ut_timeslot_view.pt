<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="unikold.timeslots">
<body>

<metal:main fill-slot="main">
    <tal:main-macro metal:define-macro="main">

        <div tal:replace="structure provider:plone.abovecontenttitle" />

        <h1 class="documentFirstHeading" tal:content="context/title" />

        <div tal:replace="structure provider:plone.belowcontenttitle" />

        <p class="documentDescription" tal:content="context/description" />

        <div tal:replace="structure provider:plone.abovecontentbody" />

        <tal:widgets tal:define="widgets view/widgets">
          <tal:widget tal:repeat="widgetTuple widgets/items">
            <tal:item tal:define="widget python: widgetTuple[1]">
              <label i18n:translate="" tal:content="widget/label" />
              <div tal:content="structure widget/render" />
            </tal:item>
            <br/>
          </tal:widget>
        </tal:widgets>

        <tal:persons tal:define="persons context/getPersons"
                     tal:condition="persons">
          <h3 i18n:translate="">Persons</h3>
          <ul>
            <li tal:repeat="person context/getPersons">
              <a tal:attributes="href person/absolute_url">
                <span tal:replace="person/Title"/>
                (<span tal:replace="person/id"/>)
              </a>
            </li>
          </ul>
        </tal:persons>

        <div tal:replace="structure provider:plone.belowcontentbody" />
    </tal:main-macro>
</metal:main>

</body>
</html>
